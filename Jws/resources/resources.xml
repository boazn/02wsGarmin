<resources>
    <drawables>
        <bitmap id="logoc_eng" filename="../resources/images/logo_sun_eng.png" x="center" y="center"/>
        <drawable-list id="MainBackground" background="Graphics.COLOR_LT_GRAY">
            <shape type="rectangle" x="0" y="0" width="100%" height="20%" color="Graphics.COLOR_LT_GRAY"/>
        </drawable-list>
        <bitmap id="LauncherIcon" filename="../resources/images/logo5_glance.png" />
    </drawables>
    <properties>
    <property id="appVersion" type="string">2.0.1</property>
    <property id="lang" type="number">1</property>
    <property id="CorF" type="string">C</property>
    </properties>
    <strings>
    <string id="AppName">02ws</string>
    <string id="Mountain">Mountain</string>
    <string id="Valley">Valley</string>
    <string id="rain">rain</string>
    <string id="language_label">Language:</string>
    <string id="language">Language</string>
    <string id="English">English</string>
    <string id="Hebrew">Hebrew</string>
    <string id="CorF">C or F</string>
    <string id="C">C</string>
    <string id="F">F</string>
    <string id="AppVersionTitle">Version</string>
    </strings>
    <settings>
    <setting propertyKey="@Properties.appVersion" title="@Strings.AppVersionTitle">
    <settingConfig type="alphaNumeric" readonly="true" />
    </setting>
    <setting propertyKey="@Properties.lang" title="@Strings.language_label">
    <settingConfig type="list">
    <listEntry value="0">@Strings.English</listEntry>
    <listEntry value="1">@Strings.Hebrew</listEntry>
    </settingConfig>
    </setting>
    
    </settings>
    <fonts>
        
        <font id="Alef27" filename="../resources/fonts/Alef27B.fnt"/>
        
    </fonts>
    
    <layout id="MainLayout">
    <drawable id="MainBackground" />
    <bitmap id="logoc" filename="../resources/images/logo6.png" x="center" y="center"/>
    <label id="DateLabel" x="center" y="10%" font="Gfx.FONT_SMALL" justification="Gfx.TEXT_JUSTIFY_CENTER" color="Gfx.COLOR_BLACK" />
    <label id="TempLabel" x="50%" y="20%" font="Gfx.FONT_LARGE" justification="Gfx.TEXT_JUSTIFY_CENTER" color="Gfx.COLOR_BLACK" />
    <label id="WindHumLabel" x="50%" y="32%" font="Gfx.FONT_SMALL" justification="Gfx.TEXT_JUSTIFY_CENTER" color="Gfx.COLOR_BLACK" />
    <label id="RainLabel" x="50%" y="42%" font="Gfx.FONT_SMALL" justification="Gfx.TEXT_JUSTIFY_CENTER" color="Gfx.COLOR_BLACK" />
    <text-area id="sigweatherText" font="Gfx.FONT_TINY" width="100%" height="45%" y="52%"  justification="Gfx.TEXT_JUSTIFY_CENTER" color="Gfx.COLOR_BLACK" background="Gfx.COLOR_LT_GRAY" />
   </layout>

   <layout id="DetailsLayout">
   <drawable id="MainBackground" />
    <bitmap id="logoDetailsLayout" filename="../resources/images/logo5_glance.png" x="center" y="center"/>
        <label id="sigweatherTextDetails" font="Gfx.FONT_SMALL" x="50%" y="10%"  justification="Gfx.TEXT_JUSTIFY_CENTER" color="Gfx.COLOR_BLACK" background="Gfx.COLOR_LT_GRAY" />
   </layout>
   <layout id="GlanceLayout">
   <drawable id="MainBackground" />
    <bitmap id="logoGlanceLayout" filename="../resources/images/logo5_glance.png" x="center" y="center"/>
        <label id="sigweatherTextDetailsGlance" font="Gfx.FONT_SMALL" x="50%" y="10%"  justification="Gfx.TEXT_JUSTIFY_CENTER" />
   </layout>
</resources>
